{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": ["ES6", "DOM"],
    "rootDir": "src",
    "moduleResolution": "node",
    "outDir": "./dist",
    "target": "ES6"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**/*",
    "*./.js"
  ],
}